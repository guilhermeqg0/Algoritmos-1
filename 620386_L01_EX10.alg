
inicio
	REAL raio, area, circunferencia

    ESCREVER "Informe o raio do circulo: "
    LER raio
    
    area <- 3.14 * raio * raio 
    
    ESCREVER "A área do circulo é de: ", area
    
   
    
    circunferencia <- 2 * 3.14 * raio
    
    ESCREVER "\nEsta é a circunferência: ", circunferencia
fim
